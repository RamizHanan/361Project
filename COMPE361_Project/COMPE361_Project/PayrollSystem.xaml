<Page
    x:Class="COMPE361_Project.PayrollSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COMPE361_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <SplitView Name="Display" IsPaneOpen="False" DisplayMode="CompactOverlay">
                <SplitView.Pane>
                    <StackPanel Background="LightGray">
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton Icon="GlobalNavigationButton" Width="50" Height="50" Background="Transparent" Click="MenuButton_Click"/>
                            <Button FocusVisualPrimaryBrush="LightGray" Background="Transparent" Click="MenuButton_Click" Content="Menu" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton Icon="Home" Width="50" Height="50" Background="Transparent" Click="HomeButton_Click"/>
                            <Button Content="Home"  FocusVisualSecondaryBrush="Blue" Background="Transparent" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton FontFamily="Segoe MDL2 Assets" Content="&#xE7E8;" Height="50" Width="50" FontSize="18"/>
                            <Button Background="Transparent" Click="LogoutButton_Click"  FontSize="18" VerticalAlignment="Center" Content="Logout"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton Click="EmployeeClock_Click" Icon="Clock" Width="50" Height="50" Background="Transparent"/>
                            <Button Background="Transparent" Click="EmployeeClock_Click" Content="Clock In/Out" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton Icon="Calendar" Width="50" Height="50" Background="Transparent" Click="Schedule_View"/>
                            <Button Background="Transparent" Content="View Schedule" FontSize="18" VerticalAlignment="Center" Click="Schedule_View"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton FontFamily="Segoe MDL2 Assets" Content="&#xE77B;" Width="50" Height="50" Background="Transparent"/>
                            <Button Background="Transparent" Content="Request PTO" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </SplitView.Pane>
                <SplitView.Content>
                    <Frame Name="Content"/>
                </SplitView.Content>
            </SplitView>
        </Grid>
    </ScrollViewer>
</Page>
