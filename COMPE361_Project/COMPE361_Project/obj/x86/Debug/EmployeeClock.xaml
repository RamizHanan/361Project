<Page
    x:Class="COMPE361_Project.EmployeeClock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COMPE361_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Image Source="Assets/background2.jpg" Stretch="UniformToFill"/>
        <RelativePanel Background="White" VerticalAlignment="Stretch" Height="500" Width="1000" HorizontalAlignment="Stretch">
            <Button x:ConnectionId='2'                 Content="Clock In" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True" Height="100" Width="175" FontSize="36"/>
            <Button x:ConnectionId='3'                  Content="Clock Out" FontSize="36" RelativePanel.AlignRightWithPanel="True" Height="100" Width="175"/>
            <Button x:ConnectionId='4'                  Content="Lunch Clock Out" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" FontSize="36" Height="100" Width="300"/>
            <Button x:ConnectionId='5'                 Content="Lunch Clock In" RelativePanel.AlignBottomWithPanel="True" FontSize="36" Height="100" Width="300"/>
            <TextBlock x:ConnectionId='6' Name="StatusBox" FontSize="36" FontWeight="Bold" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>
        </RelativePanel>
    </Grid>
</Page>

