<Page
    x:Class="COMPE361_Project.PayrollSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COMPE361_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <SplitView x:ConnectionId='2' Name="Display" IsPaneOpen="False" DisplayMode="CompactOverlay">
                <SplitView.Pane>
                    <StackPanel Background="LightGray">
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton x:ConnectionId='16' Icon="GlobalNavigationButton" Width="50" Height="50" Background="Transparent"                         />
                            <Button x:ConnectionId='17' FocusVisualPrimaryBrush="LightGray" Background="Transparent"                          Content="Menu" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton x:ConnectionId='14' Icon="Home" Width="50" Height="50" Background="Transparent"                         />
                            <Button x:ConnectionId='15' Content="Home"                          FocusVisualSecondaryBrush="Blue" Background="Transparent" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton x:ConnectionId='12' FontFamily="Segoe MDL2 Assets"                            Content="&#xE7E8;" Height="50" Width="50" FontSize="18"/>
                            <Button x:ConnectionId='13' Background="Transparent"                             FontSize="18" VerticalAlignment="Center" Content="Logout"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton x:ConnectionId='10' Name="Clock_Button"                     Icon="Clock" Width="50" Height="50" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button x:ConnectionId='11' Name="Clock_Title"                     Background="Transparent" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton x:ConnectionId='8' Name="Calendar_Button"                        Icon="Calendar" Width="50" Height="50" Background="Transparent"/>
                            <Button x:ConnectionId='9' Name="Calendar_Title"                        Background="Transparent" FontSize="18" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <AppBarButton x:ConnectionId='6' Name="PTO_Button"                   FontFamily="Segoe MDL2 Assets" Content="&#xE77B;" Width="50" Height="50" Background="Transparent"/>
                            <Button x:ConnectionId='7' Name="PTO_Title"                   Background="Transparent" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                        <StackPanel x:ConnectionId='3' Name="Manage_Employees" Orientation="Horizontal">
                            <AppBarButton x:ConnectionId='4'                         Icon="AddFriend" Width="50" Height="50" Background="Transparent"/>
                            <Button x:ConnectionId='5'                         Background="Transparent" Content="Add/Remove Employee" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </SplitView.Pane>
                <SplitView.Content>
                    <Frame x:ConnectionId='18' Name="Content"/>
                </SplitView.Content>
            </SplitView>
        </Grid>
    </ScrollViewer>
</Page>

