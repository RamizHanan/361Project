<Page
    x:Class="COMPE361_Project.PayrollSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COMPE361_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Viewbox Stretch="UniformToFill" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
        <SplitView x:ConnectionId='2' x:Name="Display" DisplayMode="CompactOverlay" IsPaneOpen="False" HorizontalAlignment="Center" Height="1058" VerticalAlignment="Center" Width="1600" CompactPaneLength="46" Padding="0,2,0,0" PanePlacement="Left">
            <SplitView.Pane>
                <StackPanel Background="LightGray">
                    <StackPanel Orientation="Horizontal">
                        <AppBarButton x:ConnectionId='10' Icon="GlobalNavigationButton" Width="50" Height="50" Background="Transparent"                         />
                        <Button x:ConnectionId='11' UseSystemFocusVisuals="False" Background="Transparent"                          Content="Menu" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <AppBarButton x:ConnectionId='8' Icon="Home" Width="50" Height="50" Background="Transparent"                         />
                        <Button x:ConnectionId='9' Background="Transparent"                          Content="Home" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='6'                            FontFamily="Segoe MDL2 Assets" Content="&#xE7E8;" Width="50" Height="60" Background="Transparent" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center"/>
                        <AppBarButton x:ConnectionId='7' Height="56" Background="Transparent"                            Content="Logout" FontSize="18" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" FontStretch="Expanded" HorizontalAlignment="Center" Margin="0,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <AppBarButton x:ConnectionId='4'                             Icon="Clock" Width="50" Height="50" Background="Transparent"/>
                        <AppBarButton x:ConnectionId='5' Background="Transparent"                             Content="Clock In/Out" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <AppBarButton Icon="Calendar" Width="50" Height="50" Background="Transparent"/>
                        <Button Background="Transparent" Content="View Schedule" FontSize="18" VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='3' x:Name="PTO_Request" FontFamily="Segoe MDL2 Assets" Content="&#xE77B;" Width="50" Height="50" Background="Transparent"/>
                        <Button Background="Transparent" Content="Request PTO" FontSize="18" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="134*"/>
                        <RowDefinition Height="45*"/>
                        <RowDefinition Height="879*"/>
                    </Grid.RowDefinitions>
                    <Frame x:ConnectionId='12' x:Name="Content" Margin="0,0,0,0.4" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Viewbox>
</Page>

