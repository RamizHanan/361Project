                    <TextBlock x:ConnectionId='12' x:Name="welcome" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,138,0,0" FontSize="72"/>
                    <TextBlock x:ConnectionId='13' x:Name="position" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,306,0,0" FontSize="36" FontFamily="Segoe UI"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Logout"/>
            <PivotItem x:ConnectionId='5' x:Name="Employee_Clock" Header="Clock In/Clock Out"/>
            <PivotItem x:ConnectionId='6' x:Name="Employer_Clock" Header="Clock Records"/>
            <PivotItem x:ConnectionId='7' x:Name="View_Schedule" Header="View Schedule"/>
            <PivotItem Header="Work History"/>
            <PivotItem x:ConnectionId='8' x:Name="Request_PTO" Header="Request PTO"/>
            <PivotItem x:ConnectionId='9' x:Name="PTO_Requests" Header="PTO Requests">
                <Grid/>
            </PivotItem>
            <PivotItem x:ConnectionId='10' x:Name="Manage_Employees" Header="Manage Employees"/>
            <PivotItem x:ConnectionId='11' x:Name="Edit_Schedule" Header="Edit Schedule">
                <Grid/>
            </PivotItem>
        </Pivot>
    </Viewbox>
</Page>

